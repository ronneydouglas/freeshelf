<%= form_for @book do |f| %>
   <p>
   <%= f.label :book_title %><br>
   <%= f.text_field :book_title %>
   </p>

   <p>
   <%= f.label :author %><br>
   <%= f.text_field :author %>
   </p>

   <p>
   <%= f.label :description %><br>
   <%= f.text_area :description %>
   </p>

   <p>
   <%= f.label :url %><br>
   <%= f.text_field :url %>
   </p>

   <p>
   <%= f.submit %>
   </p>

<% end %>
